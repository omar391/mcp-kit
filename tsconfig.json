{
    "compilerOptions": {
        "target": "ES2022",
        "module": "Node16",
        "moduleResolution": "Node16",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist/js",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "./dist",
        "sourceMap": false,
        "downlevelIteration": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "src/**/__tests__/**",
        "src/examples/**"
    ]
}