{
    "name": "@omar391/mcp-kit",
    "version": "1.0.0",
    "private": false,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "node": {
                "import": "./dist/node/index.js",
                "types": "./dist/index.d.ts"
            },
            "browser": {
                "import": "./dist/browser/server/core/hono-mcp.js",
                "types": "./dist/server/core/hono-mcp.d.ts"
            },
            "default": {
                "import": "./dist/index.js",
                "types": "./dist/index.d.ts"
            }
        },
        "./client": {
            "node": {
                "import": "./dist/node/client.js",
                "types": "./dist/client.d.ts"
            },
            "default": {
                "import": "./dist/client.js",
                "types": "./dist/client.d.ts"
            }
        },
        "./server": {
            "node": {
                "import": "./dist/node/server/index.js",
                "types": "./dist/server/index.d.ts"
            },
            "browser": {
                "import": "./dist/browser/server/handlers.js",
                "types": "./dist/server/handlers.d.ts"
            },
            "default": {
                "import": "./dist/server/index.js",
                "types": "./dist/server/index.d.ts"
            }
        },
        "./server/hono-starter": {
            "import": "./dist/universal/server/hono-starter.js",
            "types": "./dist/server/hono-starter.d.ts"
        },
        "./server/handlers": {
            "import": "./dist/universal/server/handlers.js",
            "types": "./dist/server/handlers.d.ts"
        },
        "./server/stdio": {
            "node": {
                "import": "./dist/node/server/stdio.js",
                "types": "./dist/server/stdio.d.ts"
            },
            "default": {
                "import": "./dist/server/stdio.js",
                "types": "./dist/server/stdio.d.ts"
            }
        },
        "./server/core/hono-mcp": {
            "import": "./dist/universal/server/core/hono-mcp.js",
            "types": "./dist/server/core/hono-mcp.d.ts"
        },
        "./server/core/types": {
            "import": "./dist/universal/server/core/types.js",
            "types": "./dist/server/core/types.d.ts"
        },
        "./server/core/middleware": {
            "import": "./dist/universal/server/core/middleware.js",
            "types": "./dist/server/core/middleware.d.ts"
        },
        "./server/core/runtime": {
            "import": "./dist/universal/server/core/runtime.js",
            "types": "./dist/server/core/runtime.d.ts"
        },
        "./server/local/node-instance": {
            "node": {
                "import": "./dist/node/server/local/node-instance.js",
                "types": "./dist/server/local/node-instance/index.d.ts"
            }
        },
        "./server/local/port-manager": {
            "node": {
                "import": "./dist/node/server/local/port-manager.js",
                "types": "./dist/server/local/port-manager.d.ts"
            }
        },
        "./utils/cli-parser": {
            "node": {
                "import": "./dist/node/utils/cli-parser.js",
                "types": "./dist/utils/cli-parser.d.ts"
            },
            "default": {
                "import": "./dist/universal/utils/cli-parser.js",
                "types": "./dist/utils/cli-parser.d.ts"
            }
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "BUILD_TARGET=universal rsbuild build && BUILD_TARGET=node rsbuild build && BUILD_TARGET=browser rsbuild build && tsc -p tsconfig.json --emitDeclarationOnly --skipLibCheck",
        "dev": "tsc -w -p tsconfig.json",
        "lint": "tsc --noEmit",
        "test": "vitest run"
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.15.0",
        "hono": "^4.10.4"
    },
    "devDependencies": {
        "@hono/node-server": "^1.19.6",
        "@rsbuild/core": "^1.4.5",
        "@rsbuild/plugin-node-polyfill": "^1.4.2",
        "@types/node": "^20.19.4",
        "@types/supertest": "^2.0.16",
        "esbuild": "^0.27.0",
        "supertest": "^6.3.3",
        "typescript": "^5.3.3",
        "vitest": "^3.2.4"
    }
}
